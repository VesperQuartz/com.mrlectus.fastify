{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "dist",
    "sourceMap": false,
    "baseUrl": "./",
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "include": [
    "src/**/*.ts",
    "src"
  ]
}
